generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(cuid()) @map("_id")
  username       String
  name           String
  email          String @unique
  password       String
  profilePicture String

  posts   Post[]
  Comment Comment[]
}

model Post {
  id      String @id @default(cuid()) @map("_id")
  title   String
  content String
  userId  String

  author   User      @relation(fields: [userId], references: [id])
  comments Comment[]
}

model Comment {
  id      String @id @default(cuid()) @map("_id")
  content String

  postId String
  userId String

  post   Post @relation(fields: [postId], references: [id])
  author User @relation(fields: [userId], references: [id])
}
