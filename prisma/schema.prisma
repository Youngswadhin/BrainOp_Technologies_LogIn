generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid()) @map("_id")
  name     String
  email    String    @unique
  password String
  posts    Post[]
  Comment  Comment[]
}

model Post {
  id       String    @id @default(cuid()) @map("_id")
  title    String
  content  String
  author   User      @relation(fields: [id], references: [id])
  comments Comment[]
}

model Comment {
  id      String @id @default(cuid()) @map("_id")
  content String
  post    Post   @relation(fields: [id], references: [id])
  author  User   @relation(fields: [id], references: [id])
}
